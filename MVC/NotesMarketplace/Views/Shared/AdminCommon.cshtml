<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title</title>

    <!-- Icon -->
    <link rel="Icon" href="~/Content/Admin/img/favicon/favicon.ico">

    <!-- Open Sans Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/bootstrap/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Admin/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Admin/css/font-awesome/fontawesome-free-5.15.1-web/~/Content/Admin/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/Content/Admin/css/font-awesome/fontawesome-free-5.15.1-web/~/Content/Admin/css/brands.css">
    <link rel="stylesheet" href="~/Content/Admin/css/font-awesome/fontawesome-free-5.15.1-web/~/Content/Admin/css/solid.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/responsive.css">

</head>

<body data-target=".navbar">

    <!-- Header -->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">

                <div class="navbar-header">


                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <a class="navbar-brand" href=""><img class="img-fluid" src="~/Content/Admin/img/pre-login/Capture.png"></a>
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.Dashboard_ActiveLink" href="@Url.Action("Dashboard","Admin")"><span>Dashboard</span></a>
                        </li>
                        <li class="nav-item dropdown">

                            <a class="nav-link @ViewBag.Notes_ActiveLink" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Notes</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("NotesUnderReview","Admin")">Notes Under Review</a>
                                <a class="dropdown-item" href="@Url.Action("PublishedNotes","Admin")">Published Notes</a>
                                <a class="dropdown-item" href="@Url.Action("DownloadedNotes","Admin")">Downloaded Notes</a>
                                <a class="dropdown-item" href="@Url.Action("RejectedNotes","Admin")">Rejected Notes</a>
                            </div>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.Members_ActiveLink" href="@Url.Action("Members","Admin")"><span>Members</span></a>
                        </li>
                        <li class="nav-item dropdown">

                            <a class="nav-link @ViewBag.Spam_ActiveLink" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Reports</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("SpamReport","Admin")">Spam Reports</a>
                            </div>

                        </li>
                        <li class="nav-item dropdown">

                            <a class="nav-link @ViewBag.Setting_ActiveLink" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Settings</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                @if(ViewBag.SuperAdmin=="true")
                                { 
                                    <a class="dropdown-item" href="@Url.Action("ManageSystemConfig","Admin")">Manage System Configuration</a>
                                    <a class="dropdown-item" href="@Url.Action("ManageAdministrator","Admin")">Manage Administrator</a>
                                }
                                <a class="dropdown-item" href="@Url.Action("ManageCatagory","Admin")">Manage Category</a>
                                <a class="dropdown-item" href="@Url.Action("ManageType","Admin")">Manage Type</a>
                                <a class="dropdown-item" href="@Url.Action("ManageCountry","Admin")">Manage Countries</a>
                            </div>

                        </li>
                        <li class="nav-item">
                            <div class="userprofile-user-icon dropdown">
                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                                    <img src="~/Upload/UserProfilePicture/@ViewBag.ProfilePic" class="img-fluid rounded-circle" alt="User">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("MyProfile","Admin")">Update Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("ChangePassword","Home")">Change Password</a>
                                    <a class="dropdown-item givecolor" href="@Url.Action("Logout","Admin")">LOGOUT</a>
                                </div>
                            </div>

                        </li>
                        <li class="nav-item">

                            <a type="button" class="nav-link" id="mynavbtn">Logout</a>
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @ViewBag.Dashboard_ActiveLink" href="@Url.Action("Dashboard","Admin")"><span>Dashboard</span></a>
                            </li>
                            <li class="nav-item dropdown">

                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="@ViewBag.Notes_ActiveLink" href="#"><span>Notes</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("NotesUnderReview","Admin")">Notes Under Review</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("PublishedNotes","Admin")">Published Notes</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("Downloadenotes","Admin")">Downloaded Notes</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("RejectedNotes","Admin")">Rejected Notes</a>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ViewBag.Members_ActiveLink" href="@Url.Action("Members","Admin")"><span>Members</span></a>
                            </li>
                            <li class="nav-item dropdown">

                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="@ViewBag.Spam_ActiveLink" href="#"><span>Reports</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("SpamReport","Admin")">Spam Reports</a>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item dropdown">

                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="@ViewBag.Setting_ActiveLink" href="#"><span>Settings</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    @if (ViewBag.SuperAdmin == "true")
                                    {
                                        <div class="col-12">
                                            <a class="dropdown-item">Manage System Configuration</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageAdministrator", "Admin")">Manage Administrator</a>
                                        </div>
                                    }
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageCatagory","Admin")">Manage Category</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageType","Admin")">Manage Type</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageCountry","Admin")">Manage Countries</a>
                                        </div>
                                    </div>

                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Upload/UserProfilePicture/@ViewBag.ProfilePic" class="img-fluid rounded-circle" alt="User"></a>
                                    <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                        <div class="col-12">
                                            <a class="dropdown-item " href="@Url.Action("MyProfile","Admin")">Update Profile</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ChangePassword","Home")">Change Password</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item givecolor" href="@Url.Action("Logout","Admin")">LOGOUT</a>
                                        </div>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item">
                                <a type="button" class="nav-link" id="mynavbtn">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <!-- Header Ends -->
    <!-- Basic Detail -->

    <section class="sticky-footer">
        @RenderBody()
    </section>
    <!-- footer -->
    <!-- Pagination ends -->
    <!-- footer -->
    <footer>
        <div class="aaa">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12">

                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved.
                        </p>

                    </div>
                    <div class="col-md-6 col-12 text-right">

                        <ul class="social-list">
                            <li><a href=""><i class="fa fa-facebook"></i></a></li>
                            <li><a href=""><i class="fa fa-twitter"></i></a></li>
                            <li><a href=""><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    <!-- footer ends -->
    <!-- JQuery -->
    <script src="~/Content/Admin/js/jquery.js"></script>

    <!-- Proper JS -->
    <script src="~/Content/Admin/js/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Content/Admin/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/Admin/js/script.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>

</html>
