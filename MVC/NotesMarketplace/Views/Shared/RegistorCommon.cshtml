<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title</title>


    <!-- Icon -->
    <link rel="Icon" href="~/Content/img/favicon/favicon.ico">

    <!-- Open Sans Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

</head>

<body data-target=".navbar">

    <!-- Add Notes -->
    <!-- Header -->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar @ViewBag.Moveable">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <a class="navbar-brand" href=""><img class="img-fluid" src="~/Content/img/pre-login/Capture.png"></a>
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.Search_ActiveLink" href="@Url.Action("Search","Home")"><span>Search Notes</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.Sell_ActiveLink" href="@Url.Action("Dashboard","Home")"><span>Sell Your Notes</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.BR_ActiveLink" href="@Url.Action("BuyerRequests","Home")"><span>Buyer Requests</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.FAQ_ActiveLink" href="@Url.Action("FAQ","Home")"><span>FAQ</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @ViewBag.ContactUS_ActiveLink" href="@Url.Action("ContactUs","Home")"><span>Contact Us</span></a>
                        </li>

                        <li class="nav-item">
                            <div class="userprofile-user-icon dropdown">
                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Upload/UserProfilePicture/@ViewBag.ProfilePic" class="img-fluid rounded-circle" alt="User"></a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("UserProfile","Home")">My Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("MyDownloads","Home")">My Downloads</a>
                                    <a class="dropdown-item" href="@Url.Action("SoldNotes","Home")">My Sold Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("RejectedNotes","Home")">My Rejected Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("ChangePassword","Home")">Change Password</a>
                                    <a class="dropdown-item givecolor" href="@Url.Action("Logout","Home")">LOGOUT</a>
                                </div>
                            </div>

                        </li>
                        <li class="nav-item">

                            <a class="nav-link" id="mynavbtn" onclick="location.href='@Url.Action("Logout", "Home")'">Logout</a>
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                <a class="@ViewBag.Search_ActiveLink" href="@Url.Action("Search","Home")"><span>Search Notes</span></a>
                            </li>
                            <li>
                                <a class="@ViewBag.Sell_ActiveLink" href="@Url.Action("AddNotes","Home")"><span>Sell Your Notes</span></a>
                            </li>
                            <li>
                                <a class="@ViewBag.BR_ActiveLink" href="@Url.Action("BuyerRequest","Home")"><span>Buyer Requests</span></a>
                            </li>
                            <li>
                                <a class="@ViewBag.FAQ_ActiveLink" href="@Url.Action("FAQ","Home")"><span>FAQ</span></a>
                            </li>

                            <li>
                                <a class="@ViewBag.ContactUS_ActiveLink" href="@Url.Action("ContactUs","Home")"><span>Contact Us</span></a>
                            </li>

                            <li>
                                <img src="img/user-profile/team-1.jpg" class="img-fluid rounded-circle" alt="User">
                            </li>
                            <li>
                                <button type="submit" class="btn text-center" id="mynavbtn" onclick="@Url.Action("Logout","Home")">Logout</button>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Basic Detail -->
    
    <section class="sticky-footer">
        @RenderBody()
    </section>
    <!-- footer -->
    <footer>
        <div class="aaa">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12">

                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved.
                        </p>

                    </div>
                    <div class="col-md-6 col-12 text-right">

                        <ul class="social-list">
                            <li><a href=""><i class="fa fa-facebook"></i></a></li>
                            <li><a href=""><i class="fa fa-twitter"></i></a></li>
                            <li><a href=""><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>

    </footer>
    <!-- footer ends -->
    <!-- User Profile End -->
    <!-- JQuery -->
    <script src="~/Content/js/jquery.js"></script>

    <!-- Proper JS -->
    <script src="~/Content/js/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Content/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/js/script.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
