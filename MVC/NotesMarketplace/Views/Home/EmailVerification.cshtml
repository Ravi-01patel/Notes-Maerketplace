@model NotesMarketplace.User

@{
    ViewBag.Title = "Email Verification Page";
    Layout = "~/Views/Shared/MyAuth.cshtml";
}
<!-- Email Verification page -->
<section id="emailverification-page">


    <div class="container email-container">

        <div class="row ">
            <div class="whitebg">
                <div class="col-md-12 col-sm-10 col-12 col-lg-12 col-xl-12">
                    <img class="img-fluid" src="~/Content/img/pre-login/Capture.png">
                    <div class="verify-content">
                        <div class="email-content">
                            <h2>Email Verification</h2>
                            <h4>Dear @ViewBag.Name ,</h4>
                            <p>Thanks for Signing Up!</p>
                            <h1>Simply click below for email verify.</h1>
                        </div>
                        <!-- Verify Email button -->
                        <form method="post">
                            <button type="submit" class="btn text-center" id="mybtn"><b>VERIFY EMAIL ADDRESS</b></button>
                         </form>
</div>
                </div>
            </div>
        </div>
    </div>
</section>

