@model NotesMarketplace.User

@{
    ViewBag.Title="Sign Up";
    Layout = "~/Views/Shared/MyAuth.cshtml";
}



    <!-- SignUp Page-->
    <section id="background">
        <div id="signup-page" class="container">

            <!-- LOGO -->
            <div class="row justify-content-center">
                <div id="signuplogo" class="text-center col-md-6 col-12 col-sm-12">

                    <img src="~/Content/img/pre-login/top-logo.png" class="img-fluid" alt="Loin">
                </div>
            </div>



            <div class="row justify-content-center">

                <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                    <div id="signup-form">

                        <!-- Head Section -->
                        <div id="signup-head" class="text-center">
                            <h2>Create an Account</h2>
                            <p>Enter your details to signup</p>
                        </div>

                        <div class="text-center text2">
                            @{
                                if (@ViewBag.flag=="true")
                                {
                                    <p><span><i class="fa fa-check-circle"></i> Your account has been already created.</span></p>
                                }
                                else
                                {

                                }
                            }

                        </div>
                        <!-- Form -->
                        <form method="post">

                            <!-- First Name -->
                            <div class="form-group">
                                <label class="mylabel" for="InputEmail1">First Name *</label>
                                @Html.TextBoxFor(m=>m.FirstName,new { @Type="text" ,@class= "form-control InputEmail1", @placeholder = "Enter your First Name", @maxlength = "50" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>

                            <!-- Last Name -->
                            <div class="form-group">
                                <label class="mylabel" for="InputEmail1">Last Name *</label>
                                @Html.TextBoxFor(m => m.LastName, new { @Type = "text", @class = "form-control InputEmail1", @placeholder = "Enter your Last Name", @maxlength = "50" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label class="mylabel" for="InputEmail1">Email *</label>
                                @Html.TextBoxFor(m => m.EmailID , new { @Type = "email", @class = "form-control InputEmail1", @placeholder = "Enter your Email", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.EmailID)
                            </div>

                            <!-- Password-->
                            <div class="form-group">
                                <label class="mylabel InputPassword1">Password</label>

                                <!-- Icon -->
                                <div class="wrapper">
                                    @Html.TextBoxFor(m => m.Passwords, new { @Type = "password", @class = "form-control InputEmail1 InputPassword1", @placeholder = "Enter your Password" , @id = "signup-pass-new-1" , @maxlength = "24" })
                                    <span toggle="#signup-pass-new-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    

                                </div>
                            </div>

                            <!-- Confirm Password-->
                            <div class="form-group">
                                <label class="mylabel InputPassword1">Confirm Password</label>
                                <!-- Icon -->
                                <div class="wrapper">
                                    @Html.TextBoxFor(m => m.ConfirmPasswords , new { @Type = "password", @class = "form-control InputEmail1 InputPassword1", @placeholder = "Enter your Password", @id = "signup-pass-new-2", @maxlength = "24" })
                                    <span toggle="#signup-pass-new-2" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.ConfirmPasswords)
                            </div>

                            <!-- LOGIN Button -->
                            <button type="submit" class="btn text-center" id="mybtn"><b>SIGN UP</b></button>
                        </form>

                        <p class="text-center mytext">Already have an account? <a href="@Url.Action("Login","Home")"><span>Login</span></a></p>
                      

                    </div>
                </div>
            </div>
        </div>
    </section>
    
     
