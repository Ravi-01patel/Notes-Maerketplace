@model NotesMarketplace.Models.ContactUs

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/NonRegisterCommon.cshtml";
}


    <!-- Contact US -->
    <!-- Heading -->
    <section>
        <div id="userprofile-img">
            <div class="centerh2">

                <h2>Contact Us</h2>

            </div>
        </div>
    </section>
    <!-- Heading -->
    <!-- Contact Us Form -->
    <form class="user-details-form" method="post">


        <section id="personal-details" class="user-profile  contact-us content-box-md">

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Get In Touch</h3>
                            <label class="mylabel">Let us know how to get back to you</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <!-- Full Name -->
                        <div class="form-group">
                            <label class="mylabel">Full Name *</label>
                            @Html.TextBoxFor(m => m.FullName, new { @Type = "text", @class = "form-control InputEmail1", @placeholder = "Enter your Full Name", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.FullName)
                        </div>
                        <!-- Email -->
                        <div class="form-group">
                            <label class="mylabel">Email Address *</label>
                            @Html.TextBoxFor(m => m.Email, new { @Type = "email", @class = "form-control InputEmail1", @placeholder = "Enter your Email", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <!-- Subject -->
                        <div class="form-group">
                            <label class="mylabel">Subject *</label>
                            @Html.TextBoxFor(m => m.Subject, new { @Type = "text", @class = "form-control InputEmail1", @placeholder = "Enter your subject", @maxlength = "100" })
                            @Html.ValidationMessageFor(m => m.Subject)
                        </div>
                    </div>
                    <!-- Question -->
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">

                            <div class="textarea-input">
                                <label class="mylabel" for="InputEmail1">Comments/Questions *</label>
                                @Html.TextAreaFor(m => m.Question, new { @Type = "text", @class = "form-control InputEmail1", @placeholder = "Comments..", @maxlength = "max" })
                                @Html.ValidationMessageFor(m => m.Question)

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-6">
                        <button type="submit" class="btn btn-primary btn-block login-btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- Contact Us Form -->
    
    
