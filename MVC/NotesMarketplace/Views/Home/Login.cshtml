@model NotesMarketplace.User

@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/MyAuth.cshtml";
}



    <!-- Login Page -->
    <section id="background">
        <div id="login-page" class="container">

            <!-- LOGO -->
            <div class="row justify-content-center">
                <div id="loginlogo" class="text-center">

                    <img src="~/Content/img/pre-login/top-logo.png" class="img-fluid" alt="Login">
                </div>
            </div>




            <div class="row justify-content-center">

                <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">


                    <div id="login-form">

                        <!-- Heading -->
                        <div id="login-head" class="text-center">
                            <h2>Login</h2>
                            <p>Enter your email address and password to login</p>
                        </div>

                        <!-- Form -->
                        <form method="post">

                            <!-- Email -->
                            <div class="form-group">
                                <label class="mylabel" for="InputEmail1">Email</label>
                                @Html.TextBoxFor(m => m.EmailID, new { @Type = "email", @class = "form-control InputEmail1", @placeholder = "Enter your Email", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.EmailID)
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-6 col-sm-6 col-md-6">
                                            <label class="mylabel InputPassword1">Password</label>
                                        </div>

                                        <!-- Forgot Password -->
                                        <div class="col-6 col-sm-6 clo-md-6  text-right">
                                            <a href="@Url.Action("ForgotPassword","Home")"><label class="myforgotlabel"> Forgot Password?</label></a>
                                        </div>
                                    </div>
                                </div>

                                <!-- Eye icon -->
                                <div class="wrapper">

                                    @Html.TextBoxFor(m => m.Passwords, new { @Type = "password", @class = "form-control InputEmail1 InputPassword1", @placeholder = "Enter your Password", @id = "signup-pass-new-1", @maxlength = "24" })
                                    <span toggle="#signup-pass-new-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.Passwords)

                                <!-- Error Message -->
                                @{
                                    if (@ViewBag.Login=="false")
                                    {
                                        <div class="errormsg">


                                            <p>The password that you've entered is incorrect</p>
                                        </div>
                                    }
                                    else
                                    {

                                    }

                                }
                            </div>

                            <!-- Remember Me -->

                            <div class="form-group form-check check1">
                                <input type="checkbox" class="form-check-input exampleCheck">
                                <label class="checkbox1" for="exampleCheck">Remember Me</label>
                            </div>

                            <!-- LOGIN Button -->
                            <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>login</b></button>
                        </form>

                        <p class="text-center mytext">Don't have an account? <a href="@Url.Action("SignUp","Home")"><span>Sign Up</span></a></p>

                    </div>
                </div>
            </div>
        </div>
    </section>


