@model NotesMarketplace.User

@{
    ViewBag.Title = "Forget Password";
    Layout = "~/Views/Shared/MyAuth.cshtml";
}

<!-- Forgot Password Page -->
<section id="background">
    <div id="forgotpass-page" class="container">

        <!-- Logo -->
        <div class="row justify-content-center">
            <div id="forgotpasswordlogo" class="text-cente">
                <img src="~/Content/img/pre-login/top-logo.png" class="img-fluid" alt="Loin">
            </div>
        </div>

        <div class="row justify-content-center">

            <div class="col-xl-8 col-12 col-md-12 col-sm-11 col-lg-9 ">
                <div id="forgotpass-form">

                    <!-- Heading -->
                    <div id="forgotpass-head" class="text-center">
                        <h2>Forgot Password?</h2>
                        <p>Enter your email address to reset your password</p>
                    </div>

                    <!-- Form -->
                    <form method="post">

                        <!-- Email -->
                        <div class="form-group">
                            <label class="mylabel" for="InputEmail1">Email</label>
                            @Html.TextBoxFor(m => m.EmailID, new { @Type = "email", @id = "InputEmail1", @class = "form-control InputEmail1", @placeholder = "Enter your Email", @maxlength = "100" })
                            @Html.ValidationMessageFor(m => m.EmailID)
                        </div>

                        <!-- LOGIN Button -->
                        <button type="submit" class="btn text-center" id="mybtn"><b>SUBMIT</b></button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

