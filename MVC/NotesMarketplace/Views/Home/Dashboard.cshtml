<!-- Dashboard Publish -->
<section id="dashboard-publish">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Published Notes</h3>
            </div>
            <div class="col-md-6">
                <div class="row justify-content-end">
                    <div class="wrapper">
                        <img src="~/Content/img/Dashboard/search.jpg" class="searchimage doup">
                        <input name="publishshearch" value="@Model.publishsearch" type="text" class="form-control search-bar InputEmail1" placeholder="Search">
                        <input hidden name="publishindex" value=@Request.QueryString["publishindex"] />
                        <input hidden name="PrublishTitleSort" value="@Request.QueryString["PublishTitleSort"]" />
                        <input hidden name="PublishCategorySort" value="@Request.QueryString["PublishCategorySort"]" />

                        <input hidden name="progressindex" value="" />
                        <input hidden name="ProgressProgressTitleSort" value="@Request.QueryString["ProgressTitleSort"]" />
                        <input hidden name="ProgressCategorySort" value="@Request.QueryString["ProgressCategorySort"]" />


                    </div>
                    <div class="btn-merge">
                        <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>Search</b></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="grid-table table-responsive-xl">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="align-middle">ADDED DATE</th>
                                <th scope="col" class="align-middle" onclick="location.href='@Url.Action("Dashboard", "Home",new {PublishTitleSort="title" , progressindex=Request.QueryString["publishindex"], progresssearch=Request.QueryString["publishsearch"], ProgressCategorySort=Request.QueryString["PublishCategorySort"] })'">TITLE</th>
                                <th scope="col" class="align-middle" onclick="location.href='@Url.Action("Dashboard", "Home",new {PublishCategorySort="category" , progressindex=Request.QueryString["publishindex"], progresssearch=Request.QueryString["publishsearch"], ProgressTitleSort=Request.QueryString["PublishTitleSort"] })'">CATEGORY</th>
                                <th scope="col" class="align-middle">SELL TYPE</th>
                                <th scope="col" class="align-middle">PRICE</th>
                                <th scope="col" class="align-middle">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (NoteDetail mynote1 in Model.published)
                            {
                            <tr>
                                <td class="align-middle">@mynote1.CreatedDate</td>
                                <td class="align-middle">@mynote1.Title</td>
                                <td class="align-middle">@mynote1.Category</td>
                                
                                    @if (mynote1.SellPrice == 0)
                                    {
                                          <td class="align-middle">Free</td>
                                    }
                                    else
                                    {
                                          <td class="align-middle">Paid</td>
                                        }
                                 
                                    
                                    <td class="align-middle">@mynote1.SellPrice</td>
                                    <td class="align-middle">
                                        <div class="row text-center">
                                            <div class="col-11 col-sm-11 col-md-9 col-lg-7">
                                                <a href="#"><img src="~/Content/img/Dashboard/eye.png" alt="View"></a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- Pagination -->
<section id="pagination">
    @Html.PagedListPager(Model.published, publishindex => Url.Action("Dashboard", "Home", new {publishindex,progressindex=Request.QueryString["progressindex"], publishsearch = Request.QueryString["publishsearch"], progresssearch = Request.QueryString["searchprogresssearch"], field_2 = Request.QueryString["field_2"], search_progress_2 = Request.QueryString["search_progress_2"] }), new PagedList.Mvc.PagedListRenderOptions
